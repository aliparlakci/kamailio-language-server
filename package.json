{
  "name": "kamailio-lsp",
  "displayName": "Kamailio Language Server",
  "description": "Language support for Kamailio Python scripts — pseudo-variable highlighting, completion, diagnostics, and navigation",
  "version": "0.1.0",
  "publisher": "parlakci",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aliparlakci/kamailio-language-server"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Kamailio",
      "properties": {
        "kamailioKemi.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the Kamailio language server"
        },
        "kamailioKemi.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    },
    "colors": [
      {
        "id": "kamailio.pvTypeColor",
        "description": "Color for PV type keywords like $var(, $avp( — matches function/method style",
        "defaults": {
          "dark": "#dcdcaa",
          "light": "#795e26",
          "highContrast": "#dcdcaa",
          "highContrastLight": "#5e2000"
        }
      },
      {
        "id": "kamailio.pvNameColor",
        "description": "Color for PV variable names inside parentheses — matches variable style",
        "defaults": {
          "dark": "#9cdcfe",
          "light": "#001080",
          "highContrast": "#9cdcfe",
          "highContrastLight": "#001080"
        }
      },
      {
        "id": "kamailio.pvBuiltinColor",
        "description": "Color for built-in bare PVs like $ru, $rU — matches variable style",
        "defaults": {
          "dark": "#9cdcfe",
          "light": "#001080",
          "highContrast": "#9cdcfe",
          "highContrastLight": "#001080"
        }
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "kamailioPvType",
        "superType": "type",
        "description": "Kamailio PV type keyword ($var, $avp, etc.)"
      },
      {
        "id": "kamailioPvName",
        "superType": "variable",
        "description": "Kamailio PV name inside parentheses"
      },
      {
        "id": "kamailioPvBuiltin",
        "superType": "variable",
        "description": "Kamailio built-in PV ($ru, $fu, etc.)"
      }
    ],
    "semanticTokenModifiers": [
      {
        "id": "kamailioPv",
        "description": "Marks a token as a Kamailio pseudo-variable"
      }
    ],
    "configurationDefaults": {
      "[python]": {
        "editor.quickSuggestions": {
          "strings": "on"
        }
      }
    }
  },
  "scripts": {
    "compile": "npm run compile:client && npm run compile:server",
    "compile:client": "tsc -p client/tsconfig.json",
    "compile:server": "tsc -p server/tsconfig.json",
    "bundle": "npm run bundle:client && npm run bundle:server",
    "bundle:client": "esbuild client/src/extension.ts --bundle --outfile=client/out/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "bundle:server": "esbuild server/src/server.ts --bundle --outfile=server/out/server.js --external:vscode --format=cjs --platform=node --sourcemap && cp node_modules/web-tree-sitter/tree-sitter.wasm server/out/ 2>/dev/null || cp server/node_modules/web-tree-sitter/tree-sitter.wasm server/out/ 2>/dev/null",
    "watch": "concurrently \"npm run watch:client\" \"npm run watch:server\"",
    "watch:client": "tsc -w -p client/tsconfig.json",
    "watch:server": "tsc -w -p server/tsconfig.json",
    "test": "npm run compile && cd server && npm test && cd .. && npm run verify-package",
    "verify-package": "bash scripts/verify-package.sh",
    "local-install": "bash scripts/local-install.sh",
    "postinstall": "cd client && npm install && cd ../server && npm install",
    "copy-wasm": "cp node_modules/tree-sitter-python/tree-sitter-python.wasm server/wasm/ 2>/dev/null || cp server/node_modules/tree-sitter-python/tree-sitter-python.wasm server/wasm/ 2>/dev/null || echo 'WASM not found'"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.0.0",
    "concurrently": "^8.0.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "tree-sitter-python": "^0.23.6",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "web-tree-sitter": "^0.24.3"
  }
}
